# Get all preset names
static func get_preset_names() -> Array[String]:
	var names: Array[String] = []
	for name in PRESETS.keys():
		names.append(name)
	return names

# Get a specific preset by name
static func get_preset(name: String) -> Dictionary:
	return PRESETS.get(name, {})

# Check if a preset exists
static func has_preset(name: String) -> bool:
	return PRESETS.has(name)

# Get all presets
static func get_all_presets() -> Dictionary:
	return PRESETS.duplicate(true) 
